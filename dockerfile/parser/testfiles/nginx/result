(from "ubuntu:14.04")
(label "maintainer" "Erik Hollensbe <erik@hollensbe.org>")
(please "apt-get update && apt-get install nginx-full -y")
(please "rm -rf /etc/nginx")
(add "etc" "/etc/nginx")
(please "chown -R root:root /etc/nginx")
(please "/usr/sbin/nginx -qt")
(please "mkdir /www")
(cmd "/usr/sbin/nginx")
(volume "/www")
(expose "80")
